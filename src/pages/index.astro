---
import Layout from '../layouts/Layout.astro'
import SlideContent from "../components/SlideContent.astro"
import AudioPlayer from "../components/AudioPlayer.astro"
import settings from "../content/meta/settings.json"

import { getEntry, render } from 'astro:content'
const entry = await getEntry('pages', 'index')
const { Content } = await render(entry)

---

<Layout title={ settings.title } description={ settings.description }>

  <SlideContent
    title={ settings.title }
    description={ settings.description }
  >

  <Fragment slot="content">
    <Content />
  </Fragment>

  </SlideContent>

  <!-- Audio -->
  { entry.data.audio &&
    <AudioPlayer audio={ entry.data.audio } ></AudioPlayer>
  }



</Layout>
