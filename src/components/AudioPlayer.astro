---
const { audio } = Astro.props
---

<!-- Audio -->
<audio class="js-audio-player" autoplay hidden src={ audio }  />

<script>

// Add highlight to next button when audio ends
document.addEventListener("astro:page-load", () => {
  const audioPlayer = document.querySelector('.js-audio-player')

  audioPlayer.addEventListener('ended', () => {
    const nextBtHighlight = document.querySelector('.js-next')
    nextBtHighlight.classList.add('outline', 'outline-2', 'outline-offset-2', 'outline-green-500')
    nextBtHighlight.focus()
  })
})

</script>